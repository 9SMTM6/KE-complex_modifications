{
  "title": "Shift-Delete to Delete Forward (+Option = delete word, +Command = delete line)",
  "rules": [
    {
      "description": "Shift-Delete to DeleteForward (deletes next character, use both shifts to bypass)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_forward"
            }
          ]
        }
      ]
    },
    {
      "description": "Option-Shift-Delete to Option-DeleteForward (deletes next word, use both shifts to bypass)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "shift",
                "option"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_forward",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Command-Shift-Delete to Ctrl-K (deletes rest of line, use both shifts to bypass)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_shift"
              ],
              "optional": [
                "any"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "shift",
                "command"
              ]
            },
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "k",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    }
  ]
}
