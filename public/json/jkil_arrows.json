            },
            {
              "key_code": "left_arrow"
            },
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command",
                "left_option"
              ],
              "optional": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            },
            {
              "key_code": "right_arrow"
            },
            {
              "key_code": "right_arrow"
            },
            {
              "key_code": "right_arrow"
