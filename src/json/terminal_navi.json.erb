{
    "title": "Keyboard shortcuts for Terminal apps",
    "maintainers": ["marlonrichert"],
    "rules": [
        {
            "description": "Keyboard shortcuts for Terminal apps",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "z",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "hyphen",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                      <%= frontmost_application_if("terminal") %>,
                      <%= input_source_if( [ { "language": "en" } ] ) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "z",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "slash",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                      <%= frontmost_application_if("terminal") %>,
                      <%= input_source_if( [ { "language": "fi" } ] ) %>
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "z",
                        "modifiers": {
                            "mandatory": [
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        },
                        {
                            "key_code": "hyphen",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
