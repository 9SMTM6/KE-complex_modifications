{
  "title": "bbeerr's RK61 Hybrid Tier",
  "conditions": [
    {
      "type": "device_if",
      "identifiers": [
        {
          "is_built_in_keyboard": false,
          "is_keyboard": true
        }
      ]
    }
  ],
  "maintainers": [
    "beermindnor"
  ],
  "rules": [
    {
      "description": "left_control + (left_shift + esc → ~), (esc → `)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_shift"
              ]
            }
          },
          "to": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": [
                "left_shift"
            ]
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    },
    {
      "description": "left_control + up_arrow(RK61) → up_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_control",
                "left_command
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "up_arrow(RK61) → slash(normal mode), shift + up_arrow(RK61) → ?(normal mode)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "slash"
            }
          ]
        }
      ]
    }
  ]
}
